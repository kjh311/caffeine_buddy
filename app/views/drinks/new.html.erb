<div class="navbar">
  <%= link_to 'Home', static_pages_path %>
  <%= link_to 'Stores', stores_path %>
  <%= link_to 'Drinks', drinks_path %>
</div>

<h1>New drink</h1>

<%= form_for @drink do |f| %>
<% if @drink.errors.any? %>
  <div class="error_messages">
    <h2>Form is invalid</h2>
    <ul>
      <% for message in @drink.errors.full_messages %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>
<div class="field">
  <%= f.label :name %>
  <%= f.text_field :name %>
</div>
<div class="field">
  <%= f.label :photo_url %>
  <%= f.text_field :photo_url %>
</div>

<div class="actions"><%= f.submit %></div>
<% end %>

<p><%= link_to "Drinks", drinks_path %></p>



