


<div class="container">


<h1>Listing Drinks</h1>
<button type="button" class="btn btn-primary"><%= link_to 'New Drink', new_drink_path %></button>


<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Photo</th>
      <th>Price</th>
      <th colspan="3"></th>
    </tr>
  </thead>

<% @drinks.each do |drink| %>
  <tr>
    <td><%= drink.name %></td>

    <td><img id="drinkpic" src="<%= drink.photo_url %>" alt=""></td>


    <td>$$</td>
    <td><%= link_to 'Show', drink %></td>
    <td><%= link_to 'Edit', edit_drink_path(drink) %></td>
    <td><%= link_to 'Destroy', drink, method: :delete,
                                     data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

<br>



</div>
