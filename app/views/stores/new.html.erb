<div class="navbar">
  <%= link_to 'Home', static_pages_path %>
  <%= link_to 'Stores', stores_path %>
  <%= link_to 'Drinks', drinks_path %>
</div>

<h1>new store</h1>


<%= form_for @store do |f| %>
<% if @store.errors.any? %>
  <div class="error_messages">
    <h2>Form is invalid</h2>
    <ul>
      <% for message in @store.errors.full_messages %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>
<div class="field">
  <%= f.label :name %>
  <%= f.text_field :name %>
</div>
<br>
<div class="field">
  <%= f.label :address %>
  <%= f.text_field :address %>
</div>
<div style="margin; 0 auto;" class="actions"><%= f.submit %></div>
<% end %>

<p><%= link_to "Stores", stores_path %></p>

