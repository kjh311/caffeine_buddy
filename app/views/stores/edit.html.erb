

<h1>store edit</h1>

<h3 id="edit">
<%= form_for @store do |f| %>
<% if @store.errors.any? %>
  <div class="error_messages">
    <h2>Form is invalid</h2>
    <ul>
      <% for message in @store.errors.full_messages %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>
<div class="field">
  <%= f.label :name %>
  <%= f.text_field :name %>
</div>
<br>
<div class="field">
  <%= f.label :address %>
  <%= f.text_field :address %>
</div>
<br>
<div class="actions"><%= f.submit %></div>
<% end %>

<p><%= link_to "Stores", stores_path %></p></h3>
