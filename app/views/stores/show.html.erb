<div class="navbar">
  <%= link_to 'Home', static_pages_path %>
  <%= link_to 'Stores', stores_path %>
  <%= link_to 'Drinks', drinks_path %>
</div>


<div class="container">


<h1><%= @store.name %></h1>
<p><%= @store.address %></p>

<style type="text/css">
      html, body, #map-canvas { height: 300px; width: 500px;  margin: 0; padding: 0;}
    </style>
    <script type="text/javascript"
      src="https://maps.googleapis.com/maps/api/js?key=<%= ENV['GOOGLE_MAPS_KEY'] %>">
    </script>
    <script type="text/javascript">
      function initialize() {
        var store_location = {lat: <%= @store.latitude %>, lng: <%= @store.longitude %>};
        var mapOptions = {
          center: store_location,
          zoom: 15
        };

        var map = new google.maps.Map(document.getElementById('map-canvas'), mapOptions);

        var marker = new google.maps.Marker({
          position: store_location,
          map: map,
          title: 'Hello World!',
          visible: true
        });
        marker.setMap(map);

      }
      google.maps.event.addDomListener(window, 'load', initialize);
</script>


<div style="margin: 0 auto; float: left; margin-left: 100px;" id="map-canvas"></div>




<div id="funnypic"></div>
<br>
</div>
<br>
<div  class="container">
  <br>
<table id="storedrinks">
  <thead>
    <tr>
      <th>Drink Type</th>
      <th>Picture</th>
      <th>Price</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <% @store.drinks.each do |drink| %>

  <td><%= drink.name %></td>
  <td><img id="drinkpic" src="<%= drink.photo_url %>"></td>
  <td>$<%= sprintf('%.2f', drink.price(@store.id)) %> </td>


  </tr>
  <% end %>

</table>

<div id="store_buttons">


  <br>
  <button type="button" class="btn btn-success">Get Diretions</button>
  <br>
  <br>
  <%= link_to 'New Drink', new_drink_path %>
  <br>
  <br>

  <%= link_to 'New Comment', new_comment_path %>
</div>

</div>


