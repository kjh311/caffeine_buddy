<div class="navbar">
  <%= link_to 'Home', static_pages_path %>
  <%= link_to 'Stores', stores_path %>
  <%= link_to 'Drinks', drinks_path %>
</div>


<div  class="container">


<h1><%= @store.name %></h1>
<p><%= @store.address %></p>

<style type="text/css">
      html, body, #map-canvas { height: 300px; width: 500px;  margin: 0; padding: 0;}
    </style>
    <script type="text/javascript"
      src="https://maps.googleapis.com/maps/api/js?key=<%= ENV['GOOGLE_MAPS_KEY'] %>">
    </script>
    <script type="text/javascript">
      function initialize() {
        var store_location = {lat: <%= @store.latitude %>, lng: <%= @store.longitude %>};
        var mapOptions = {
          center: store_location,
          zoom: 15
        };

        var map = new google.maps.Map(document.getElementById('map-canvas'), mapOptions);

        var marker = new google.maps.Marker({
          position: store_location,
          map: map,
          title: 'Hello World!',
          visible: true
        });
        marker.setMap(map);

      }
      google.maps.event.addDomListener(window, 'load', initialize);
</script>


<div style="margin: 0 auto; float: left; margin-left: 100px;" id="map-canvas"></div>




<div id="funnypic"></div>
<br>
</div>
<br>
<div  id="store_form" class="container">
  <br>
<table id="storedrinks">
  <thead>
    <tr>
      <th><h3>Drink Type</h3></th>
      <th><h3>Picture</h3></th>
      <th><h3>Price</h3></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <% @store.drinks.each do |drink| %>

  <td><%= drink.name %></td>
  <td><img id="drinkpic" src="<%= drink.photo_url %>"></td>
  <td>$<%= sprintf('%.2f', drink.price(@store.id)) %> </td>
  <td><%= link_to 'Edit', edit_drink_path(drink) %> </td>
  <td><button type="button" class="btn btn-danger"><%= link_to 'Delete this Drink', drink, method: :delete,
                                     data: { confirm: 'Are you sure?' } %> </td></button>



  </tr>
  <% end %>

</table>

<div id="store_buttons">


  <br>
  <button type="button" class="btn btn-success">Get Diretions to <%= @store.name %></button>
  <br>
  <br>
  <%#= link_to 'Add Drink', new_drink_path %>

  <br>


  <div class="dropdown">
  <button class="btn btn-primary dropdown-toggle" type="button" data-toggle="dropdown">Add Drink to <%= @store.name %>
  <span class="caret"></span></button>
  <ul class="dropdown-menu">
<%# @drinks.each do |drink| %>
    <li><%#= drink.name %></li>

  </ul>
</div>
<form action="" method="POST" class="form-inline" role="form">
<br>
  <div class="form-group">
    <label class="sr-only" for="">label</label>
    <input type="text" class="form-control" id="" placeholder="Price">
  </div>


<%# end %>
  <button type="submit" class="btn btn-primary">Submit</button>
</form>
  <br>
  <br>

  <button type="button" class="btn btn-primary">Add Comment for <%= @store.name %></button>

</div>

</div>


