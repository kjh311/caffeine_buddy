<div class="navbar">
  <%= link_to 'Home', static_pages_path %>
  <%= link_to 'Stores', stores_path %>
  <%= link_to 'Drinks', drinks_path %>
</div>

<h1>Nearby Stores</h1>


<h2><button type="button" class="btn btn-primary"><%= link_to 'New Store', new_store_path %></button></h2>

<div class="container">


<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Address</th>
      <th>Distance</th>
      <th colspan="3"></th>
    </tr>
  </thead>

<% @stores.each do |store| %>
  <tr>
    <td><button type="button" class="btn btn-success"><%= link_to store.name, store_path(store), method: :get %></button></td>
    <td><%= store.address %></td>
    <td>Miles</td>


<td><button type="button" class="btn btn-danger"><%= link_to 'Delete', store, method: :delete,
                                    data: { confirm: 'Are you sure?' } %></button></td>
  </tr>
<% end %>
</table>

<br>






</div>

